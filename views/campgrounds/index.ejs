<% layout('/layout/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campground/new">Add Campground</a>
    </div>

    <ul>
        <% for(campground of campgrounds){ %>
            <!--<li> <a href="/campground/<%= campground._id %>"> <%= campground.title  %></a> </li> -->
            <div class="card">
                <div class="row">
                    <div class="col-md-4">
                        <img src="https://images.pexels.com/photos/1687845/pexels-photo-1687845.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" class="img-fluid" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%=campground.title%></h2>
                            <p class="card-text"><%=campground.description%></p>
                            <p><small class="text-muted"><%=campground.location%></small></p>
                            <a href="/campground/<%=campground.id%>" class="btn btn-primary">View</a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

    </ul>